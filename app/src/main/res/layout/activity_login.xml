<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:background="@drawable/left_gradient"
        android:backgroundTintMode="src_atop"
        tools:context=".MainActivity">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLogin"
            style="@style/Button"
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:backgroundTint="#01060B"
            android:backgroundTintMode="add"
            android:fontFamily="sans-serif-thin"
            android:text="ENTRAR"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="27sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.959"
            app:strokeWidth="1dp"/>

        <ImageView android:id="@+id/Unioz_logo" android:layout_width="174dp" android:layout_height="161dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.497" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.096" app:srcCompat="@drawable/unioz_logo"/>
        <TextView android:id="@+id/textView" android:layout_width="123dp" android:layout_height="53dp" android:fontFamily="sans-serif-condensed" android:lineSpacingExtra="20sp" android:text="Login" android:textAlignment="center" android:textAllCaps="false" android:textColor="#FFFFFF" android:textSize="35sp" android:textStyle="bold" android:typeface="monospace" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/Unioz_logo" app:layout_constraintVertical_bias="0.066"/>
        <Button android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:backgroundTint="#0000" android:fontFamily="monospace" android:shadowColor="#000000" android:text="Esqueceu sua senha?" android:textColorLink="#972727" android:textSize="19dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.928"/>
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/textInputLayout" android:layout_width="409dp" android:layout_height="wrap_content" android:layout_marginStart="36dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"> </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/editRa"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:hint="Digite seu RA"
            android:inputType="textCapWords"
            android:maxLength="10"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.245"/>

        <EditText
            android:id="@+id/editPassword"
            style="@style/EditText"
            android:layout_width="357dp"
            android:layout_height="60dp"
            android:hint="Digite sua Senha"
            android:inputType="text|textNoSuggestions"
            android:maxLength="15"
            android:password="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editRa"
            app:layout_constraintVertical_bias="0.389"/>

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/editRa"
            app:layout_constraintEnd_toEndOf="@+id/editRa"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="@+id/editRa"
            app:layout_constraintTop_toTopOf="@+id/editRa"
            app:layout_constraintVertical_bias="0.466"
            app:srcCompat="@drawable/avatar_do_usuario"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="@+id/editPassword"
            app:layout_constraintEnd_toEndOf="@+id/editPassword"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="@+id/editPassword"
            app:layout_constraintTop_toTopOf="@+id/editPassword"
            app:layout_constraintVertical_bias="0.64"
            app:srcCompat="@drawable/ic_password"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="775dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>